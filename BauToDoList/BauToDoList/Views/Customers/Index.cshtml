@model IEnumerable<BauToDoList.Models.Customer>

@{
    ViewBag.Title = "Müşteriler";
}

<h2>Müşteri Listesi</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-primary" })@*/başka sayfaya gitmek istedğim için null verdik*@
    <a class="dt-button buttons-excel buttons-html5 btn green-turquoise btn-outline" tabindex="0" aria-controls="sample-1" href="@Url.Action("ExportToExcel","Customers")" style="float:right;"><span> Excel Aktarım</span></a>

    <a class="dt-button buttons-excel buttons-html5 btn purple btn-outline" tabindex="0" aria-controls="sample-1" href="@Url.Action("ExportToCsv","Customers")" style="float:right;"><span> Csv Aktarım</span></a>
</p>
<table id="tblRecords" class="table"> @*layout da bul tbl yi*@
    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.Fax)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.WebSite)
            </th>
           
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WebSite)
                </td>
              
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id },new { @class="btn btn-primary btn-xs"})                  
                    @Html.ActionLink("Ayrıntılar", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-xs" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>
