@model IEnumerable<BauToDoList.Models.Side>

@{
    ViewBag.Title = "Taraflar";
}

<h2>Taraflar</h2>

<p>
<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-primary" })@*/başka sayfaya gitmek istedğim için null verdik*@
    <a class="dt-button buttons-excel buttons-html5 btn green-turquoise btn-outline" tabindex="0" aria-controls="sample-1" href="@Url.Action("ExportToExcel","Sides")" style="float:right;"><span> Excel Aktarım</span></a>

    <a class="dt-button buttons-excel buttons-html5 btn purple btn-outline" tabindex="0" aria-controls="sample-1" href="@Url.Action("ExportToCsv","Sides")" style="float:right;"><span> Csv Aktarım</span></a>
</p>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th >
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id },new { @class=" btn btn-primary btn-xs"}) |
                    @Html.ActionLink("Ayrıntılar", "Details", new { id = item.Id }, new { @class = " btn btn-primary btn-xs" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = " btn btn-primary btn-xs" })
                </td>
            </tr>
        }
    </tbody>

</table>
